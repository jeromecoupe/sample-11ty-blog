{% macro blogCard(date, title, image, url) %}
  <article class="c-blogcard">
    <a class="c-blogcard__link" href="{{ url }}">
      <p class="c-blogcard__media"><img class="u-fluidimage" src="/assets/img/blog/600x600/{{ image }}" loading="lazy" alt="{{ title }}"></p>
      <p class="c-blogcard__meta"><time datetime="{{ date | date('YYYY-MM-DD') }}">{{ date | date("MMMM D, Y") }}</time></p>
      <h2 class="c-blogcard__title">{{ title }}</h2>
    </a>
  </article>
{% endmacro %}